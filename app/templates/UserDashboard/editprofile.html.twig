{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
<style>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css"/>
</style>

<div class="container emp-profile">
	<form method="post">
		<div class="row">
				<div class="col-md-6"> <div class="profile-head">
					<h5>
						{{ app.user.username }}
					</h5>
					{# <p class="proile-rating">Dodane artykuły :
						<span>{{ articlesByUser |length }}</span>
					</p> #}
					<ul
						class="nav nav-tabs" id="myTab" role="tablist">
						{# Info o userze #}
						<li class="nav-item">
							<a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">O mnie</a>
						</li>
						{# Jeśli trener to treningi #}
						{# <li class="nav-item">
							<a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Profil Trenera</a>
						</li> #}
					</ul>
				</div>
			</div>
			
		</div>
		<div class="row">
			{# <div class="col-md-4">
				<div class="profile-work">
					<p>Moje artykuły</p>
					{% for ar in articlesByUser %}
						<a href="">{{ ar.title }}</a><br/>
					{% endfor %}
				</div>
			</div> #}
			<div class="col-md-8">
				<div class="tab-content profile-tab" id="myTabContent">
				{{ form_start(userprofileForm) }}
					<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
						<div class="row">
							<div class="col-md-6">
								<label>Username</label>
							</div>
							<div class="col-md-6">
								{{ form_widget(userprofileForm.username) }}
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<label>First Name</label>
							</div>
							<div class="col-md-6">
								{{ form_widget(userprofileForm.first_name)}}
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<label>Last Name</label>
							</div>
							<div class="col-md-6">
								{{ form_widget(userprofileForm.last_name)}}
							</div>
						</div>
						<div class="row">
						    <div class="col-md-6">
						        <label>Description</label>
						    </div>
						    <div class="col-md-6">
						        {{ form_widget(userprofileForm.description) }}
						    </div>
						</div>
					</div>
					{# Button do zapisywania profilu #}
					<div class="col-md-2">
						<button type="submit" class="profile-edit-btn" name="btnAddMore" value="Save your profile"></button>
					</div>
				{{ form_end(userprofileForm) }}
				</div>
			</div>
		</div>
	</form>
</div>
    {% block javascripts %}
       <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
       <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>   
    {% endblock %}
   
{% endblock %}
