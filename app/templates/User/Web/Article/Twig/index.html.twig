{% extends 'base.html.twig' %}

{% block title %}App:blog:entries{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
            <div class="row">
                <!-- Blog entries-->
                <div class="col-lg-8">
                <!--Jeśli zalogowany to będzie mógł dodać artykuł class="btn btn-lg btn-primary"-->
                {% if (app.user) %}
                    <a  class="btn" type="submit" height="40px" href="{{ path('new-article') }}" font-size="16px" border-radius="20px">
                        Dodaj Artykuł </a>
                {% endif %}

                {% for article in articles %}
                    
                
                    <!-- Najnowszy artykuł src="https://dummyimage.com/850x350/dee2e6/6c757d.jpg" -->
                    {% if ( loop.index ) %}
                    <div class="card mb-4">
                         <img class="card-img-top" alt="Embedded Image" src="{{ article.mainImagePath}}" />
                        <div class="card-body">
                            <div class="small text-muted">{{ article.CreatedAt |date('d-m-Y') }}</div>
                            <h2 class="card-title">{{ article.Title }}</h2>
                            {#<p class="card-text">{{% app.article.content %}}</p> #}
                            <a class="btn btn-primary" href="{{path('eachArticle', {id: article.id})}}">Read more →</a>
                        </div>
                    </div>
                    {% else %}
                    <!-- Reszta artykułów wg pętli for -->
{#                     
                    <div class="row"> #}
                        <div class="col-lg-6">
                            <!-- Blog post-->
                            <div class="card mb-4">
                                {# <img class="card-img-top" src="{{ article.mainImagePath }}" /> #}
                                <div class="card-body">
                                    <div class="small text-muted">{{ article.CreatedAt |date('d-m-Y') }}</div>
                                    <h2 class="card-title h4">{{ article.Title }}</h2>
                                    {# <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Reiciendis aliquid atque, nulla.</p> #}
                                    <a class="btn btn-primary" href="{{path('eachArticle', {article: article.id})}}">Read more →</a>
                                </div>
                            </div>                       
                            
                        </div> 
                        {% endif %}
                    {# </div> #}
                    {% endfor %}
                    <!-- Pagination-->
                    {# <nav aria-label="Pagination">
                        <hr class="my-0" />
                        <ul class="pagination justify-content-center my-4">
                            <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Newer</a></li>
                            <li class="page-item active" aria-current="page"><a class="page-link" href="#!">1</a></li>
                            <li class="page-item"><a class="page-link" href="#!">2</a></li>
                            <li class="page-item"><a class="page-link" href="#!">3</a></li>
                            <li class="page-item disabled"><a class="page-link" href="#!">...</a></li>
                            <li class="page-item"><a class="page-link" href="#!">15</a></li>
                            <li class="page-item"><a class="page-link" href="#!">Older</a></li>
                        </ul>
                    </nav> #}
                </div>
                <!-- Side widgets-->
                <div class="col-lg-4">
                    <!-- Search widget-->
                    <div class="card mb-4">
                        <div class="card-header">Search</div>
                        <div class="card-body">
                            <div class="input-group">
                                <input class="form-control" type="text" placeholder="Enter search term..." aria-label="Enter search term..." aria-describedby="button-search" />
                                <button class="btn btn-primary" id="button-search" type="button">Go!</button>
                            </div>
                        </div>
                    </div>
                    <!-- Categories widget-->
                    {# <div class="card mb-4">
                        <div class="card-header">Categories</div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <ul class="list-unstyled mb-0">
                                        <li><a href="#!">Web Design</a></li>
                                        <li><a href="#!">HTML</a></li>
                                        <li><a href="#!">Freebies</a></li>
                                    </ul>
                                </div>
                                <div class="col-sm-6">
                                    <ul class="list-unstyled mb-0">
                                        <li><a href="#!">JavaScript</a></li>
                                        <li><a href="#!">CSS</a></li>
                                        <li><a href="#!">Tutorials</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div> #}
                    <!-- TOP z  Big Data -->
                    <div class="card mb-4">
                        <div class="card-header">Hokej na twitterze</div>
                        <div class="card-body">
                            <h4>Jak często w danym roku mówiono o hokeju:</h4> 
                            {% for stat in statistics %}
                            <div class="row">
                                <div class="col-sm-6">   
                                    W {{ stat.year }} zamieszczono                                     
                                </div> 
                                <div class="col-sm-6">
                                    {{ stat.count }} posty
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
